<form action="/login/" class="" method="POST" id="login-form">
    <div class="form-group">
        <label>{{#_}}Email{{/_}}:</label>
        <input name="email" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>{{#_}}Password{{/_}}:</label>
        <input name="password" type="password" class="form-control" />
    </div>
</form>
    <button type="submit" class="btn btn-primary" id="doLogin">{{#_}}Login{{/_}}</button>
    <div class="login-error margin-top10"></div>
    <a  id="password-reset" href="{{password-reset}}">{{#_}}Password reset{{/_}}</a>
